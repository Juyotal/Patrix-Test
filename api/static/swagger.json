{
    "openapi": "3.0.0",
    "info": {
      "description": "F1 data API",
      "version": "1.0.0",
      "title": "F1 data API",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "servers": [
      {
        "url": "/api/"
      }
    ],
    "tags": [
      {
        "name": "F1 race Results Data API",
        "description": " Experimental api with results of every round of every season since beginning of F1 in 1950",
        "externalDocs": {
          "description": "Find out more",
          "url": "https://ergast.com/mrd/"
        }
      }
    ],
    "paths": {
      "/{year}/{round}": {
          "get": {
          "tags": [
              "Race Ranking"
          ],
          "summary": "Get Race Results",
          "description": "Get all race results for specified year and round",
          "parameters": [
            {
              "name": "year",
              "in": "path",
              "description": "year of races that needs to be fetched",
              "required": true,
              "schema": {
                "type": "integer",
                "format": "int64"
              }
            },
            {
              "name": "round",
              "in": "path",
              "description": "Round of races that needs to be fetched",
              "required": true,
              "schema": {
                "type": "integer",
                "format": "int64"
              }
            }
          ],
          "responses": {
              "200": {
                  "description": "Successful operation",
                  "content": {
                  "application/json": {
                      "schema": {
                      "type": "object",
                      "properties":{
                        "MRdata":{
                            "type": "object",
                            "properties": {
                              "xmlns": {
                                "type": "string",
                                "example": "http://ergast.com/mrd/1.5"
                              },
                              "series": {
                                "type": "string",
                                "example": "f1"
                              },
                              "url": {
                                "type": "string",
                                "example": "http://ergast.com/api/f1/2000/4/results"
                              },
                              "limit": {
                                "type": "integer",
                                "example": "30"
                              },
                              "offset": {
                                "type": "integer",
                                "example": "0"
                              },
                              "total": {
                                "type": "integer",
                                "example": "20"
                              },
                              "RaceTable": {
                                "type": "object",
                                "example": "0",
                                "properties": {
                                  "season": {
                                    "type": "integer",
                                    "example": "2000"
                                  },
                                  "round": {
                                    "type": "integer",
                                    "example": "3"
                                  },
                                  "Races": {
                                    "type": "array"
                                  }
                                }
                              }
                            }
                        }
                      }

                      }
                  }
                  }
              },
              "404": {
                  "description": "NOT FOUND",
                  "content": {
                  "application/json": {
                      "schema": {
                      "type": "object",
                      "properties": {
                          "status": {
                          "type": "string",
                          "example": "Error"
                          },
                          "message": {
                          "type": "string",
                          "example": "Results found for year 2022, round 1"
                          }
                      }
                      }
                  }
                  }
              },
              "500": {
                  "description": "Server Error",
                  "content": {
                  "application/json": {
                      "schema": {
                      "type": "string",
                      "example": "Server Error"
                      }
                  }
                  }
              }
          }
        }
          }
    }
}
